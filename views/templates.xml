<odoo>
    <data>

        <template id="index">
         <title>Screen</title>
            <t t-foreach="product" t-as="product">
                <div class="offer"> 
                    <img t-attf-src="data:image/*;base64,{{product.image}}" style="max-height: 1280px"/>
                    <div class="productname">
                        <t t-esc="product.name"/> 
                    </div>
                    <div class="productprice" >
                        <t t-esc="product.list_price"/> 
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>